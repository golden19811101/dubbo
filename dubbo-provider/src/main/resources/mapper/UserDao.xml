<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcz.dubbo.dao.UserDao">
	<resultMap id="userMap" type="com.lcz.dubbo.model.User" >
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="age" property="age" jdbcType="INTEGER" />
	</resultMap>

	<select id="queryObject" resultMap="userMap" parameterType="Integer">
		select * from `user` where id = #{id}
	</select>

	<select id="queryList" parameterType="com.lcz.dubbo.model.User" resultMap="userMap">
		select * from `user`
		<where>
			<if test="id != null">
				and id = #{id}
			</if>
			<if test="name != null and name.trim() != ''">
				and `name` like concat('%',#{name},'%')
			</if>
			<if test="age != null">
				and age = #{age}
			</if>
		</where>
	</select>


</mapper>