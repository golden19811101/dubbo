<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用名，用于计算依赖关系，不是匹配条件，不要与消费方一样 -->
    <dubbo:application name="dubbo-provider"/>

    <dubbo:annotation package="com.lcz.dubbo"/>
    <!-- 使用zookeeper作为注册中心 -->
    <dubbo:registry  protocol="zookeeper" address="zookeeper://192.168.168.135:2181"/>
    <!-- 生成远程服务代理，可以和本地bean一样使用demoService -->
    <dubbo:service timeout="4000" interface="com.lcz.dubbo.service.ProviderService" ref="providerService"/>
    <dubbo:service timeout="4000" interface="com.lcz.dubbo.service.UserService" ref="userService"/>
</beans>